@model IEnumerable<ShoppingCart.Web.Models.ProductDto>
<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i>Create New Product</a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Price.ToString("C")</td>
                        <td class="text-center">
                            <a asp-action="ProductEdit" asp-route-productId="@item.ProductId" class="btn btn-success"><i class="fas fa-edit"></i></a>
                            <a asp-action="ProductDelete" asp-route-productId="@item.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
